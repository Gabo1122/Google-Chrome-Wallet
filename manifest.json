{
	"manifest_version": 2,
	"name": "Bitcoin Token Wallet",
	"version": "1.0.1",
	"description": "Bitcoin Token Wallet is the perfect way to store, send or receive your BTK Tokens.",
	"icons": { 
		"16": "assets/img/icons/icon_16.png",
		"48": "assets/img/icons/icon_48.png",
		"128": "assets/img/icons/icon_96.png" 
	},
	"background": {
		"scripts": [
			"assets/js/background.js"
		]
	},
   	"browser_action": {
   		"default_title": "Bitcoin Token Wallet",
		"default_icon": "assets/img/icons/icon_128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",
    "permissions": [
    	"storage",
    	"https://coinlib.io/",
    	"https://wslb-widgets.coinlib.io/",
    	"https://btk.community/",
    	"https://mainnet.infura.io/"
    ]
}